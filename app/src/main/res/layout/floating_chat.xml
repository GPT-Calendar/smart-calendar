<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Collapsed Bubble View -->
    <LinearLayout
        android:id="@+id/chat_bubble"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/floating_bubble_background"
        android:gravity="center"
        android:elevation="8dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¤–"
            android:textSize="28sp" />
    </LinearLayout>

    <!-- Expanded Chat View -->
    <LinearLayout
        android:id="@+id/chat_expanded"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/floating_chat_background"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ¤– AI Assistant"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/floating_minimize_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/floating_icon_button"
                android:contentDescription="Minimize"
                android:src="@android:drawable/arrow_down_float" />

            <ImageButton
                android:id="@+id/floating_close_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/floating_icon_button"
                android:contentDescription="Close"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
        </LinearLayout>

        <!-- Response Area -->
        <TextView
            android:id="@+id/floating_response_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/floating_response_background"
            android:minHeight="60dp"
            android:padding="12dp"
            android:text="Hi! Type or tap ðŸŽ¤ to chat"
            android:textColor="#333333"
            android:textSize="14sp" />

        <!-- Input Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/floating_input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp">

            <EditText
                android:id="@+id/floating_input_field"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Type here..."
                android:imeOptions="actionSend"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/floating_mic_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/floating_mic_button"
                android:contentDescription="Voice input"
                android:padding="8dp"
                android:src="@android:drawable/ic_btn_speak_now" />

            <ImageButton
                android:id="@+id/floating_send_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/floating_send_button"
                android:contentDescription="Send"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_send" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
