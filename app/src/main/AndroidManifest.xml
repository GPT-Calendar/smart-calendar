<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Voice input -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Location permissions for location-based reminders -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Exact alarms (Android 12+) -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Set alarms in system Clock app -->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />

    <!-- Boot receiver -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Foreground service for TTS during notification -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    
    <!-- Overlay permission for floating chat bubble -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Phone state permission to pause wake word during calls -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- SMS permissions -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- Internet permission for OSMDroid to download map tiles -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:name=".VoiceReminderApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VirtualAssistant"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.LocationSettingsActivity"
            android:exported="false"
            android:label="@string/location_settings_title"
            android:parentActivityName=".presentation.MainActivity" />

        <!-- Reminder notification receiver -->
        <receiver
            android:name=".receivers.ReminderReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.voicereminder.ACTION_SNOOZE" />
                <action android:name="com.example.voicereminder.ACTION_MARK_DONE" />
            </intent-filter>
        </receiver>

        <!-- Boot receiver for rescheduling reminders -->
        <receiver
            android:name=".receivers.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <!-- Geofence broadcast receiver for location-based reminders -->
        <receiver
            android:name=".receivers.GeofenceBroadcastReceiver"
            android:enabled="true"
            android:exported="false" />

        <!-- Snooze action receiver for location reminder notifications -->
        <receiver
            android:name=".receivers.SnoozeActionReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.example.voicereminder.SNOOZE_1_HOUR" />
                <action android:name="com.example.voicereminder.SNOOZE_NEXT_VISIT" />
                <action android:name="com.example.voicereminder.SNOOZE_WHEN_LEAVE" />
            </intent-filter>
        </receiver>

        <!-- SMS receiver for bank transaction tracking -->
        <receiver
            android:name=".sms.BankSmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- Voice Button Widget (2x2) - Simple one-tap voice -->
        <receiver
            android:name=".widget.VoiceButtonWidget"
            android:exported="true"
            android:label="@string/widget_voice_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_voice_info" />
        </receiver>

        <!-- Next Up Widget (3x1) - Shows next reminder -->
        <receiver
            android:name=".widget.NextUpWidget"
            android:exported="true"
            android:label="@string/widget_next_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_next_info" />
        </receiver>

        <!-- Chat Widget Provider (4x3) - Full chat interface -->
        <receiver
            android:name=".widget.ChatWidgetProvider"
            android:exported="true"
            android:label="@string/widget_name">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_chat_info" />
        </receiver>

        <!-- Widget Input Activity - transparent overlay for typing -->
        <activity
            android:name=".widget.WidgetInputActivity"
            android:exported="false"
            android:theme="@style/Theme.Widget.Transparent"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:launchMode="singleInstance" />

        <!-- Widget Chat Service - processes messages in background -->
        <service
            android:name=".widget.ChatWidgetService"
            android:exported="false" />

        <!-- Floating Chat Service - persistent overlay chat bubble -->
        <service
            android:name=".widget.FloatingChatService"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <!-- Wake Word Service - listens for "Kiro" wake word -->
        <service
            android:name=".widget.WakeWordService"
            android:exported="false"
            android:foregroundServiceType="microphone" />

    </application>

</manifest>
